
@{
    ViewBag.Title = "Elements";
}


<!-- Style Plugins -->
@Styles.Render("~/styles/plugins/select2.css")
@Styles.Render("~/styles/plugins/bootstrap-colorpicker.css")
@Styles.Render("~/styles/plugins/bootstrap-slider.css")
@Styles.Render("~/styles/plugins/bootstrap-datepicker.css")
@Styles.Render("~/styles/plugins/summernote.css")


<div class="page page-forms-elements">
    <ol class="breadcrumb breadcrumb-small">
        <li>Usuarios</li>
    </ol>
    <div class="page-wrap">
        <!-- row -->
        <div class="row">
            <!-- Basic Table -->
            <div class="col-md-12">
                <div class="panel panel-lined panel-hovered mb20 table-responsive basic-table">
                    <div class="panel-heading">
                        Basic Table
                        <div class="btn-group btn-group-sm right">
                            <button type="button" id="btnNuevoUsuario" class="btn btn-primary btn-lg" data-table-class="table-bordered">Nuevo Usuario</button>                           
                        </div>
                    </div>
                    <div class="panel-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="col-lg-1"><button type="button" class="btn btn-default btn-sm fa fa-trash"></th>
                                    <th>Nombres</th>
                                    <th>Apellidos</th>
                                    <th>Tipo de Usuario</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="ui-checkbox ui-checkbox-primary ml5">
                                            <label>
                                                <input type="checkbox"><span></span>
                                            </label>
                                        </div>
                                    </td>
                                    <td>My First Blog</td>
                                    <td>Johnny</td>
                                    <td>Web Design</td>                                  
                                </tr>
                                <tr>
                                    <td>
                                        <div class="ui-checkbox ui-checkbox-primary ml5">
                                            <label>
                                                <input type="checkbox"><span></span>
                                            </label>
                                        </div>
                                    </td>
                                    <td>How to Design</td>
                                    <td>Jenifer</td>
                                    <td>design</td>                                   
                                </tr>
                                <tr>
                                    <td>
                                        <div class="ui-checkbox ui-checkbox-primary ml5">
                                            <label>
                                                <input type="checkbox"><span></span>
                                            </label>
                                        </div>
                                    </td>
                                    <td>Something is missing</td>
                                    <td>Joe</td>
                                    <td>uncategorized</td>                                   
                                </tr>
                                <tr>
                                    <td>
                                        <div class="ui-checkbox ui-checkbox-primary ml5">
                                            <label>
                                                <input type="checkbox"><span></span>
                                            </label>
                                        </div>
                                    </td>
                                    <td>Learn a new language</td>
                                    <td>Rinky</td>
                                    <td>language</td>                                  
                                </tr>
                                <tr>
                                    <td>
                                        <div class="ui-checkbox ui-checkbox-primary ml5">
                                            <label>
                                                <input type="checkbox"><span></span>
                                            </label>
                                        </div>
                                    </td>
                                    <td>I love singing. Do you?</td>
                                    <td>AJ</td>
                                    <td>singing</td>                                   
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- col-left -->
            <div class="col-sm-12 col-md-6">
                <div class="panel panel-default panel-hovered panel-stacked mb30">
                    <div class="panel-heading">Registro de Usuarios</div>
                    <div class="panel-body">
                        <form role="form" class="form-horizontal" action="javascript:;">
                            <!-- form horizontal acts as a row -->
                            <!-- normal control -->
                            <div class="form-group">
                                <label class="col-md-3 control-label">Nombres</label>
                                <div class="col-md-9">
                                    <input type="text" id="txtnombres" class="form-control" placeholder="Nombres">
                                </div>
                            </div>
                            <!-- with hint -->
                            <div class="form-group">
                                <label class="col-md-3 control-label">Apellidos</label>
                                <div class="col-md-9">
                                    <input type="text" id="txtapellidos" class="form-control" placeholder="Apellidos">
                                </div>
                            </div>
                            <!-- with hint -->
                            <div class="form-group">
                                <label class="col-md-3 control-label">Correo</label>
                                <div class="col-md-9">
                                    <input type="text" id="txtcorreo" class="form-control" placeholder="Correo">
                                </div>
                            </div>
                            <!-- passowrd control -->
                            <div class="form-group">
                                <label class="col-md-3 control-label">Contraseña</label>
                                <div class="col-md-9">
                                    <input type="password" id="txtcontraseña" class="form-control" placeholder="Password Text">
                                </div>
                            </div>
                            <!-- tipo usuario -->
                            <div class="form-group">
                                <label class="col-md-3 control-label">Tipo de Usuario</label>
                                <div class="col-md-9">
                                    <select class="form-control" id="cmbUsuarios">
                                        <option value="0" selected disabled>Seleccionar</option>
                                        <option value="1">Super Usuario</option>
                                        <option value="2">Administrador</option>
                                        <option value="3">Lider</option>
                                        <option value="4">Miembro</option>
                                    </select>
                                </div>
                            </div>
                            
                            <div class="clearfix right">
                                <button class="btn btn-default" id="btncancelar">Cancelar</button>
                                <button class="btn btn-primary mr5" id="btnguardar" type="submit">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div> <!-- #end col-left -->
        <!-- #end row -->
        </div> <!-- #end page-wrap -->        
    </div> <!-- #end page -->

    <div class="modal fade" id="modalPrueba" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="panel-heading">Registro de Usuarios</div>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form role="form" class="form-horizontal" action="javascript:;">
                        <!-- form horizontal acts as a row -->
                        <!-- normal control -->
                        <div class="form-group">
                            <label class="col-md-3 control-label">Nombres</label>
                            <div class="col-md-9">
                                <input type="text" id="txtnombres" class="form-control" placeholder="Nombres">
                            </div>
                        </div>
                        <!-- with hint -->
                        <div class="form-group">
                            <label class="col-md-3 control-label">Apellidos</label>
                            <div class="col-md-9">
                                <input type="text" id="txtapellidos" class="form-control" placeholder="Apellidos">
                            </div>
                        </div>
                        <!-- with hint -->
                        <div class="form-group">
                            <label class="col-md-3 control-label">Correo</label>
                            <div class="col-md-9">
                                <input type="text" id="txtcorreo" class="form-control" placeholder="Correo">
                            </div>
                        </div>
                        <!-- passowrd control -->
                        <div class="form-group">
                            <label class="col-md-3 control-label">Contraseña</label>
                            <div class="col-md-9">
                                <input type="password" id="txtcontraseña" class="form-control" placeholder="Password Text">
                            </div>
                        </div>
                        <!-- tipo usuario -->
                        <div class="form-group">
                            <label class="col-md-3 control-label">Tipo de Usuario</label>
                            <div class="col-md-9">
                                <select class="form-control" id="cmbUsuarios">
                                    <option value="0" selected disabled>Seleccionar</option>
                                    <option value="1">Super Usuario</option>
                                    <option value="2">Administrador</option>
                                    <option value="3">Lider</option>
                                    <option value="4">Miembro</option>
                                </select>
                            </div>
                        </div>                        
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Scripts-->
@Scripts.Render("~/scripts/plugins/select2.min.js")
@Scripts.Render("~/scripts/plugins/bootstrap-colorpicker.min.js")
@Scripts.Render("~/scripts/plugins/bootstrap-slider.min.js")
@Scripts.Render("~/scripts/plugins/summernote.min.js")
@Scripts.Render("~/scripts/plugins/bootstrap-datepicker.min.js")
@Scripts.Render("~/scripts/app.js")
@Scripts.Render("~/scripts/form-elements.init.js")
@Scripts.Render("~/scripts/MisProyectos.js")